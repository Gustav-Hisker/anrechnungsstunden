---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="A Latex editor" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"
            crossorigin="anonymous"
            referrerpolicy="no-referrer"
        />

        <link rel="stylesheet" href="/global.css" />
        <link rel="stylesheet" href="/components.css" />
    </head>
    <body>
        <Navbar />

        <main>
            <slot />
        </main>

        <Footer />
    </body>
</html>

<script>
    import { isLoggedIn, isSuperuser, logout, pb } from "../pocketbase";
    let collection = isSuperuser() ? "_superusers" : "users";

    async function updateAuth() {
        await pb.collection(collection).authRefresh();
        if (!isLoggedIn()) {
            logout();
        }
    }

    if (isLoggedIn()) {
        pb.collection(collection).subscribe(pb.authStore.record!.id, (e) => {
            if (e.action == "delete") {
                pb.authStore.clear();
            } else {
                pb.authStore.save(pb.authStore.token, e.record);
            }
        });
        updateAuth();

        // Refresh auth every 5 minutes
        const authInterval = 5 * 60 * 1000;

        setInterval(updateAuth, authInterval);
    } else {
        logout();
    }
</script>
